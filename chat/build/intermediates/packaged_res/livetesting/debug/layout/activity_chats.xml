<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include layout="@layout/chat_toolbar"/>

        <RelativeLayout
            android:background="@color/chatWindow"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/textLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/chatWindow_bottom"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding.tiny"
                android:paddingRight="@dimen/padding.tiny"
                android:visibility="visible"
                android:weightSum="3">


                <FrameLayout
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <com.bykeapk.chatmodule.widgets.FontEditText
                        android:id="@+id/messageEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/chat_messageborder"
                        android:hint="Type message"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_15sdp"
                        android:inputType="textMultiLine"
                        android:scrollIndicators="bottom"
                        android:scrollbars="vertical"
                        android:maxLines="3"
                        android:textColor="@android:color/black"
                        android:paddingLeft="@dimen/padding.small"
                        android:visibility="visible"
                        android:lineSpacingExtra="@dimen/_8sdp"
                        app:fontName="open_sans_regular.ttf"/>

                    <FrameLayout
                        android:id="@+id/voiceMsgLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/padding.small"
                        android:visibility="gone">

                        <Chronometer
                            android:id="@+id/chronometer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/margin.small"
                            android:src="@drawable/slide_to_cancel" />

                    </FrameLayout>
                </FrameLayout>

                <ImageView
                    android:id="@+id/cameraImageView"
                    android:visibility="gone"
                    android:padding="@dimen/_3sdp"
                    android:layout_gravity="bottom"
                    app:srcCompat="@drawable/ic_camera_alt_black_24dp"
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_38sdp" />

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/voiceImageView"
                    android:padding="@dimen/_3sdp"
                    android:layout_gravity="bottom"
                    app:srcCompat="@drawable/ic_mic_black_24dp"
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_38sdp" />

                <ImageView
                    android:id="@+id/messageImageView"
                    android:background="@drawable/send_message_circle"
                    android:visibility="gone"
                    android:layout_gravity="bottom"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_send_black_24dp"
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_38sdp" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/messagesContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/textLayout"
                android:background="@color/chatWindow"
                android:clickable="false"
                android:divider="@android:color/transparent"
                android:listSelector="@android:color/transparent"
                android:paddingBottom="@dimen/_4sdp"
                android:scrollbars="none"
                android:stackFromBottom="true" />

            <ProgressBar
                android:id="@+id/loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin.normal"
                android:visibility="invisible" />


            <ProgressBar
                android:id="@+id/loader_audio"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textLayout"
                android:layout_below="@+id/messagesContainer"
                android:layout_gravity="bottom"
                android:layout_marginBottom="-5dp"
                android:layout_marginTop="-8dp"
                android:indeterminate="true"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
