<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="30"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="@color/chat_send_color" />
            </shape>
        </rotate>
    </item>
    <item android:right="@dimen/_12sdp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/chat_send_color" />
            <corners android:bottomLeftRadius="@dimen/_4sdp"
                android:topLeftRadius="@dimen/_4sdp"
                android:bottomRightRadius="@dimen/_4sdp"/>
        </shape>
    </item>
</layer-list>