<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_gravity="left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.bykeapk.chatmodule.widgets.FontTextView
        android:id="@+id/chatTime"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:padding="@dimen/_4sdp"
        android:background="@drawable/date_chat_bg"
        android:layout_gravity="center"
        android:textColor="@color/image_color"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"/>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/msgLayout"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:background="@drawable/chat_bubble_incomming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.bykeapk.chatmodule.widgets.FontTextView
            android:id="@+id/chat_main_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingRight="@dimen/_8sdp"
            android:maxWidth="@dimen/_250sdp"
            android:textColor="@android:color/black"
            app:fontName="open_sans_regular.ttf"
            tools:text="Please bring this mobile and call me when" />

        <com.bykeapk.chatmodule.widgets.FontTextView
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_8sdp"
            android:id="@+id/time_msg_created"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_4sdp"
            tools:text="10:12 AM"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/dark_gray"
            app:fontName="open_sans_regular.ttf"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/audioLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_36sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/audio_layout_round"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingTop="@dimen/_8sdp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/playBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_8sdp"
            app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

        <ProgressBar
            android:id="@+id/loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_8sdp"
            android:visibility="gone" />

        <SeekBar
            android:id="@+id/seekbar"
            style="@style/seekbarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_toRightOf="@+id/playBtn" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekbar"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_toRightOf="@+id/playBtn">

            <com.bykeapk.chatmodule.widgets.FontTextView
                android:id="@+id/voiceDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_10sdp"
                app:fontName="open_sans_regular.ttf" />

            <com.bykeapk.chatmodule.widgets.FontTextView
                android:id="@+id/voice_created_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_10sdp"
                app:fontName="open_sans_regular.ttf" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>

