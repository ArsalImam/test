<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/image_color"
    android:orientation="vertical"
    tools:context=".ui.activities.PhotoEditActivity">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/ImagePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include layout="@layout/toolbar_photoedit" />

    <com.bykeapk.chatmodule.widgets.FontEditText
        android:id="@+id/captionEditext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkest_gray"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:inputType="text"
        android:padding="@dimen/_12sdp"
        android:hint="Write a caption..."
        android:cursorVisible="false"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/_16sdp"
        app:fontName="open_sans_regular.ttf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/sendImageBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/send_message_circle"
        app:layout_constraintBottom_toTopOf="@+id/captionEditext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/captionEditext" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/sendImageBtn"
        app:layout_constraintEnd_toEndOf="@+id/sendImageBtn"
        app:layout_constraintStart_toStartOf="@+id/sendImageBtn"
        app:layout_constraintTop_toTopOf="@+id/sendImageBtn"
        app:srcCompat="@drawable/ic_send_black_24dp" />


</android.support.constraint.ConstraintLayout>