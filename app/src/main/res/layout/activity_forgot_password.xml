<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--
        <include layout="@layout/cancel_toolbar"/>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/padding.small"
            app:srcCompat="@drawable/ic_arrow_back_48px" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Forgot Pin Code"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_20sdp" />

    </FrameLayout>

    <View
        android:id="@+id/toolbarLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:background="@drawable/toolbar_bottom_shadow_gray" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin.large"
                android:background="@drawable/button_green"
                android:padding="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_forot_pin_code" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin.normal"
                android:gravity="center"
                android:maxWidth="@dimen/_190sdp"
                android:text="@string/toolbar.title.mobile.msg"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.title"
                app:fontName="roboto_regular.ttf" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin.large"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_21sdp"
                android:paddingRight="@dimen/_21sdp">

                <ImageView
                    android:id="@+id/ivMobileNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_mobile_number_simple" />

                <com.bykea.pk.partner.widgets.FontEditText
                    android:id="@+id/phoneNumberEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/ivMobileNumber"
                    android:layout_alignTop="@id/ivMobileNumber"
                    android:layout_marginLeft="@dimen/margin.normal"
                    android:layout_marginRight="@dimen/margin.normal"
                    android:layout_toRightOf="@id/ivMobileNumber"
                    android:background="@color/transparent"
                    android:backgroundTint="@color/transparent"
                    android:gravity="center|left"
                    android:hint="@string/hint.phone.number.14"
                    android:inputType="numberPassword"
                    android:maxLength="11"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/secondaryColorLight"
                    android:textSize="@dimen/textsize.body2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/phoneNumberEt"
                    android:background="@color/textColorSecondary"
                    android:visibility="visible" />


            </RelativeLayout>


            <Button
                android:id="@+id/sendBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button.next.height"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin.normal"
                android:layout_marginRight="@dimen/margin.normal"
                android:layout_marginTop="@dimen/margin.normal"
                android:background="@drawable/button_green"
                android:text="@string/button.text.send"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
