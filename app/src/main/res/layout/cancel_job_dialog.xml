<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_32sdp"
    android:layout_marginLeft="@dimen/_12sdp"
    android:layout_marginRight="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_32sdp"
    android:background="@drawable/country_dialog_bg"
    android:orientation="vertical"

    android:paddingBottom="@dimen/_10sdp"
    android:paddingTop="@dimen/_10sdp">


    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin.small"
            android:layout_marginRight="@dimen/margin.small"
            android:layout_marginTop="@dimen/margin.normal"
            android:gravity="center"
            android:text="Your booking will be cancelled"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize.title"
            app:fontName="roboto_bold.ttf" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/messageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Tell us why and help us to improve"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize.small.medium" />

        <com.bykea.pk.partner.widgets.ScrollViewMaxHeight
            android:id="@+id/svRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:maxHeight="@dimen/_300sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin.small"
                android:layout_marginRight="@dimen/margin.small"
                android:gravity="center"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/optionBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin.normal"
                    android:layout_marginTop="@dimen/margin.normal">
                    <!--
                                        <RadioButton
                                            android:id="@+id/oneOption"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:checked="true"
                                            android:text="Didn't show up"
                                            android:textColor="@color/textColorPrimary" />-->
                </RadioGroup>


            </LinearLayout>
        </com.bykea.pk.partner.widgets.ScrollViewMaxHeight>

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/positiveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/svRB"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin.small"
            android:background="@drawable/button_red"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Submit"
            android:textColor="@color/buttonTextColor"
            android:textSize="@dimen/textsize.large"
            app:fontName="MuseoSans_1.otf" />

    </LinearLayout>


</LinearLayout>