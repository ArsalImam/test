<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/_12sdp"
    android:layout_marginLeft="@dimen/_22sdp"
    android:layout_marginRight="@dimen/_22sdp"
    android:layout_marginTop="@dimen/_12sdp"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llBottom"
        android:background="@drawable/dialog_white_bg_top_round" />


    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dialog_white_bg_bottom_round"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_6sdp"
        android:paddingTop="@dimen/_6sdp"
        android:weightSum="2">


        <ImageView
            android:id="@+id/ivNegative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_weight="1"
            android:background="@drawable/button_grey_light_round"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/close_browser"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivPositive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/button_red_round"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/correct_symbol" />

    </LinearLayout>

</RelativeLayout>
