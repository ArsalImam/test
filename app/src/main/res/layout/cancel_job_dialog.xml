<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/_32sdp"
    android:layout_marginLeft="@dimen/_12sdp"
    android:layout_marginRight="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_32sdp"
    android:background="@drawable/country_dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_4sdp"
    android:paddingTop="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_8sdp"
        android:orientation="vertical">


        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin.normal"
            android:gravity="center"
            android:text="Your booking will be cancelled"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize.title"
            app:fontName="roboto_bold.ttf" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/messageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Tell us why and help us to improve"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize.small.medium" />

        <com.bykea.pk.partner.widgets.ScrollViewMaxHeight
            android:id="@+id/svRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:maxHeight="@dimen/_260sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/optionBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:inputType="text"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp">

                </RadioGroup>
            </LinearLayout>
        </com.bykea.pk.partner.widgets.ScrollViewMaxHeight>

    </LinearLayout>


    <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/positiveBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin.small"
            android:layout_weight="1"
            android:background="@drawable/button_red"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Submit"
            android:textColor="@color/buttonTextColor"
            android:textSize="@dimen/textsize.large"
            app:fontName="roboto_bold.ttf" />


</LinearLayout>