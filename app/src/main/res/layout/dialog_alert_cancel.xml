<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/_48sdp"
    android:layout_marginRight="@dimen/_48sdp"
    android:background="@drawable/country_dialog_bg"
    android:orientation="vertical">

    <com.bykea.pk.partner.widgets.FontTextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:minWidth="@dimen/_200sdp"
        android:padding="@dimen/_12sdp"
        android:text="@string/cancel"
        android:textColor="@color/black"
        android:textSize="@dimen/_28sdp"
        app:fontName="jameel_noori_nastaleeq.ttf" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/negativeBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height.large.medium"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/button_grey_light_square"
            android:gravity="center"
            android:padding="@dimen/_11sdp"
            android:src="@drawable/close_browser" />

        <ImageView
            android:id="@+id/positiveBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height.large.medium"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/button_square_red"
            android:gravity="center"
            android:padding="@dimen/_11sdp"
            android:src="@drawable/correct_symbol_square" />

    </LinearLayout>

</LinearLayout>