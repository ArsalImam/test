<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="com.bykea.pk.partner.ui.offlinerides.OfflineFragmentListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/rGOfflineRide"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_14sdp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        tools:ignore="RtlHardcoded">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rBSawari"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_18sdp"
                            android:layout_marginRight="@dimen/_18sdp"
                            android:button="@drawable/radio_button_offline_ride"
                            android:checked="true"
                            android:text="@string/sawari"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            app:fontName="jameel_noori_nastaleeq.ttf" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rBDelivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/radio_button_offline_ride"
                            android:text="@string/delivery"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            app:fontName="jameel_noori_nastaleeq.ttf" />
                    </RadioGroup>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/linLayoutDropOffAddress"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/gray_bordered_bg"
                                    android:gravity="center_vertical"
                                    android:onClick="@{() -> listener.onDropOffClicked()}"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_8sdp">

                                    <ImageView
                                        android:id="@+id/iVDropOffAddress"
                                        android:layout_width="20dp"
                                        android:layout_height="30dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginRight="10dp"
                                        android:src="@drawable/ic_drop_off_pin_red" />

                                    <com.bykea.pk.partner.ui.helpers.FontTextView
                                        android:id="@+id/tVDropOffAddress"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:hint="@string/manzil"
                                        android:lines="1"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sdp"
                                        app:fontName="open_sans_regular.ttf" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@drawable/button_gray_unselected"

                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_8sdp">

                                    <com.bykea.pk.partner.ui.helpers.FontTextView
                                        android:id="@+id/tVOfflineFare"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"
                                        android:hint="@string/offline_ride_fare"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sdp"
                                        app:fontName="open_sans_regular.ttf" />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_14sdp"
                        android:background="@drawable/gray_bordered_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_2sdp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_smartphone" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Mobile #"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textColorHint="@drawable/hint_color_selected"
                            android:theme="@style/TextInputLayoutAppearance">

                            <com.bykea.pk.partner.widgets.FontEditText
                                android:id="@+id/eTMobileNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:digits="1234567890"
                                android:hint="@string/hint_mobile_number"
                                android:inputType="numberSigned"
                                android:maxLength="11"
                                android:paddingTop="@dimen/_4sdp"
                                android:textColor="@color/black"
                                android:textColorHint="@drawable/hint_color_unselected"
                                android:textSize="@dimen/_14sdp"
                                app:fontName="open_sans_regular.ttf" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linLayoutSenderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_14sdp"
                        android:background="@drawable/gray_bordered_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_user_name" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_customer_name"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textColorHint="@drawable/hint_color_selected"
                            android:theme="@style/TextInputLayoutAppearance">

                            <com.bykea.pk.partner.widgets.FontEditText
                                android:id="@+id/eTCustomerName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:digits="@string/alphabets"
                                android:hint="@string/enter_sender_name_hint"
                                android:inputType="text"
                                android:maxLength="24"
                                android:paddingTop="@dimen/_4sdp"
                                android:textColor="@color/black"
                                android:textColorHint="@drawable/hint_color_unselected"
                                android:textSize="@dimen/_14sdp"
                                app:fontName="open_sans_regular.ttf" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:onClick="@{() -> listener.onOfflineKamaiClicked()}"
                        app:cardBackgroundColor="@color/white"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FAFAFA">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:paddingTop="@dimen/_2sdp"
                                    android:paddingBottom="@dimen/_2sdp"
                                    app:srcCompat="@drawable/ic_youtube" />

                                <com.bykea.pk.partner.ui.helpers.FontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="@string/advantages"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_20sdp"
                                    app:fontName="jameel_noori_nastaleeq.ttf" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/secondaryColorLightest1" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/_12sdp"
                                    android:paddingBottom="@dimen/_12sdp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_clock" />
                                </LinearLayout>

                                <View
                                    android:layout_width="@dimen/_1sdp"
                                    android:layout_height="match_parent"
                                    android:background="@color/secondaryColorLightest1" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/_12sdp"
                                    android:paddingBottom="@dimen/_12sdp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_petrol_stand" />
                                </LinearLayout>

                                <View
                                    android:layout_width="@dimen/_1sdp"
                                    android:layout_height="match_parent"
                                    android:background="@color/secondaryColorLightest1" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/_12sdp"
                                    android:paddingBottom="@dimen/_12sdp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="@dimen/_60sdp"
                                        android:layout_height="@dimen/_40sdp"
                                        app:srcCompat="@drawable/ic_currency" />
                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>


        <com.bykea.pk.partner.ui.helpers.FontTextView
            android:id="@+id/tVReceiveCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_A7A7A7"
            android:gravity="center"
            android:onClick="@{() -> listener.onReceiveCodeClicked()}"
            android:padding="@dimen/_5sdp"
            android:text="@string/receive_code"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="normal"
            app:fontName="jameel_noori_nastaleeq.ttf" />

    </LinearLayout>
</layout>
