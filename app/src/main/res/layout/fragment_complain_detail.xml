<layout>

    <data>

        <variable
            name="listener"
            type="com.bykea.pk.partner.ui.complain.GenericFragmentListener" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/editText_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_30sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/wrong_fare_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.bykea.pk.partner.widgets.FontEditText
                            android:id="@+id/editTextPickUpAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/square_outline_bg"
                            android:gravity="left"
                            android:hint="Pickup Address"
                            android:inputType="textMultiLine"
                            android:overScrollMode="always"
                            android:padding="@dimen/_9sdp"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="@color/color_gray373737"
                            android:textSize="@dimen/textsize.body1"
                            android:visibility="visible" />

                        <com.bykea.pk.partner.widgets.FontEditText
                            android:id="@+id/edittextDropOffAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/square_outline_bg"
                            android:gravity="left"
                            android:hint="Dropoff Address"
                            android:inputType="textMultiLine"
                            android:overScrollMode="always"
                            android:padding="@dimen/_9sdp"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="@color/color_gray373737"
                            android:textSize="@dimen/textsize.body1"
                            android:visibility="visible" />

                        <com.bykea.pk.partner.widgets.FontEditText
                            android:id="@+id/editTextStops"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/square_outline_bg"
                            android:gravity="left"
                            android:hint="Stops (if any)"
                            android:inputType="textMultiLine"
                            android:overScrollMode="always"
                            android:padding="@dimen/_9sdp"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="@color/color_gray373737"
                            android:textSize="@dimen/textsize.body1"
                            android:visibility="visible" />

                        <com.bykea.pk.partner.widgets.FontEditText
                            android:id="@+id/editTextKilometersTravelled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/square_outline_bg"
                            android:gravity="left"
                            android:hint="Kilometers Travelled"
                            android:inputType="phone"
                            android:overScrollMode="always"
                            android:digits="0123456789"
                            android:padding="@dimen/_9sdp"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="@color/color_gray373737"
                            android:textSize="@dimen/textsize.body1"
                            android:visibility="visible" />

                        <com.bykea.pk.partner.widgets.FontEditText
                            android:id="@+id/editTextBookingTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/square_outline_bg"
                            android:gravity="left"
                            android:hint="Booking Time (Minutes)"
                            android:inputType="phone"
                            android:overScrollMode="always"
                            android:padding="@dimen/_9sdp"
                            android:scrollbarStyle="insideInset"
                            android:digits="0123456789"
                            android:scrollbars="vertical"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="@color/color_gray373737"
                            android:textSize="@dimen/textsize.body1"
                            android:visibility="visible" />

                        <com.bykea.pk.partner.widgets.FontEditText
                            android:id="@+id/editTextPaidAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/square_outline_bg"
                            android:gravity="left"
                            android:hint="Paid Amount"
                            android:inputType="phone"
                            android:overScrollMode="always"
                            android:padding="@dimen/_9sdp"
                            android:digits="0123456789"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="@color/color_gray373737"
                            android:textSize="@dimen/textsize.body1"
                            android:visibility="visible" />

                    </LinearLayout>


                    <com.bykea.pk.partner.widgets.FontEditText
                        android:id="@+id/etDetails"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/square_outline_bg"
                        android:gravity="left"
                        android:hint="Enter Details"
                        android:inputType="textMultiLine"
                        android:minLines="10"
                        android:overScrollMode="always"
                        android:padding="@dimen/_9sdp"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:textColor="@color/textColorPrimary"
                        android:textColorHint="@color/color_gray373737"
                        android:textSize="@dimen/textsize.body1"
                        android:visibility="visible" />

                </LinearLayout>
            </ScrollView>

            <com.bykea.pk.partner.widgets.FontButton
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/button_green_no_rounded_corner"
                android:gravity="center"
                android:onClick="@{() -> listener.onSubmitClicked()}"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize.large"
                app:fontName="jameel_noori_nastaleeq.ttf" />

        </LinearLayout>

    </FrameLayout>
</layout>