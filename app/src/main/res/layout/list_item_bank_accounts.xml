<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding.small">

    <com.bykea.pk.partner.widgets.FontTextView
        android:id="@+id/bankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MCb bank"
        android:textColor="@color/textColorPrimary"
        android:textAllCaps="true"
        android:textSize="@dimen/textsize.medium"
        app:fontName="roboto_bold.ttf" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textColorPrimary"
            android:text="Account Title"
            android:textSize="@dimen/textsize.normal"
            app:fontName="roboto_light.ttf" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/accountTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:layout_weight="1"
            android:text="bykea tech"
            android:textSize="@dimen/textsize.normal"
            app:fontName="roboto_light.ttf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Account Number"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize.normal"
            app:fontName="roboto_light.ttf" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/accountNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textColorPrimary"
            android:text="PK00Fay0390382383"
            android:textSize="@dimen/textsize.normal"
            app:fontName="roboto_light.ttf" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/margin.small"
        android:background="@color/divider" />

</LinearLayout>