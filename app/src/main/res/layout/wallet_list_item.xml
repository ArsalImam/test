<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rlWalletItem"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_14sdp"
    android:paddingTop="@dimen/_14sdp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_7sdp"
        android:paddingRight="@dimen/_7sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/tvTripId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RWP269176"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.wallet.item"
                app:fontName="roboto_regular.ttf" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTripId"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="FARE"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.wallet.item_1"
                app:fontName="roboto_regular.ttf" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">


            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/tvTempTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.wallet.item"
                android:visibility="invisible"
                app:fontName="roboto_regular.ttf" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/tvTotalTripAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTempTotal"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textsize.wallet.item_1"
                app:fontName="roboto_regular.ttf" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21 Mar, 11:59 a.m."
                android:gravity="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.wallet.item"
                app:fontName="roboto_regular.ttf" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDate"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="center"
                android:text="-100"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.wallet.item_1"
                app:fontName="roboto_regular.ttf" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">


            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/tvTempBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.wallet.item"
                android:visibility="invisible"
                app:fontName="roboto_regular.ttf" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/tvBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTempBalance"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textsize.wallet.item_1"
                app:fontName="roboto_regular.ttf" />

        </RelativeLayout>

    </LinearLayout>


    <com.bykea.pk.partner.widgets.FontTextView
        android:id="@+id/tvTripStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llTop"
        android:paddingLeft="@dimen/_7sdp"
        android:paddingRight="@dimen/_7sdp"
        android:paddingTop="@dimen/_5sdp"
        android:text="Paid via Wallet"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/_9sdp"
        app:fontName="roboto_regular.ttf" />


</RelativeLayout>