<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/windowBackground"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:padding="@dimen/padding.small"
            app:srcCompat="@drawable/ic_arrow_back_48px" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/bookingTypeIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/padding.small"
            app:srcCompat="@mipmap/icon_forks" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/bookingNoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:textColor="@color/color_gray636363"
            android:textSize="@dimen/_14sdp" />

    </FrameLayout>

    <View
        android:id="@+id/toolbarLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorPrimary" />

    <FrameLayout
        android:id="@+id/bookingDetailContainerFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>