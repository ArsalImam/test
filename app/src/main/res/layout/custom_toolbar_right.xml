<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_48sdp"
    android:background="@android:color/white"
    android:elevation="8dp"
    android:fitsSystemWindows="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:theme="@style/toolbarIconColor"
    app:elevation="8dp">

    <ImageView
        android:id="@+id/ivBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        app:srcCompat="@drawable/ic_arrow_back_48px" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxWidth="@dimen/_220sdp"
            android:maxLines="2"
            android:textAllCaps="false"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone"
            app:fontName="jameel_noori_nastaleeq.ttf"
            tools:text="@string/app_name"
            tools:visibility="visible" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvTitleUrdu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/_220sdp"
            android:maxLines="2"
            android:textAllCaps="false"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone"
            app:fontName="jameel_noori_nastaleeq.ttf"
            tools:text="@string/chat"
            tools:visibility="visible" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgViewCategory"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        tools:background="@drawable/ic_chat_bubble"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>