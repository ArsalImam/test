<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/_20sdp"
    android:paddingLeft="@dimen/_12sdp"
    android:paddingRight="@dimen/_12sdp"
    android:paddingTop="@dimen/_20sdp">

    <com.bykea.pk.partner.widgets.FontTextView
        android:id="@+id/addressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21 Street, Block 5"
        android:textColor="@color/grey"
        android:textSize="@dimen/_15sdp"
        app:fontName="open_sans_regular.ttf" />

    <com.bykea.pk.partner.widgets.FontTextView
        android:id="@+id/distanceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2.7 km"
        android:textColor="@color/grey"
        android:textSize="@dimen/_15sdp"
        app:fontName="open_sans_regular.ttf" />

    <com.bykea.pk.partner.widgets.FontTextView
        android:id="@+id/durationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressTv"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="2 hrs 45 mins"
        android:textColor="@color/grey"
        android:textSize="@dimen/_15sdp"
        app:fontName="open_sans_regular.ttf" />

    <ImageView
        android:id="@+id/directionBtn"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:src="@drawable/direction"
        android:contentDescription="Direction Image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46sdp"
        android:layout_below="@+id/durationTv"
        android:layout_marginTop="@dimen/_12sdp"
        android:orientation="horizontal"
        android:weightSum="5">

        <FrameLayout
            android:background="@drawable/button_gray"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="2">

            <ImageView
                android:padding="@dimen/_8sdp"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_gravity="center"
                android:src="@drawable/call_answer" />

        </FrameLayout>


        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/assignBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_weight="2"
            android:background="@drawable/button_green"
            android:gravity="center"
            android:text="Assign"
            android:textAllCaps="false"
            android:textColor="@color/buttonTextColor"
            android:textSize="@dimen/textsize.normal"
            android:textStyle="bold"
            app:fontName="open_sans_semi_bold.ttf" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>


</RelativeLayout>