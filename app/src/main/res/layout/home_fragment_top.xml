<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:clickable="true">


    <LinearLayout
        android:id="@+id/llInlineTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:background="@color/windowBackground"
        android:orientation="horizontal"
        android:padding="@dimen/padding.tiny"
        android:weightSum="9">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center">

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/statusTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:text="INACTIVE"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_13sdp"
                app:fontName="roboto_bold.ttf" />

            <ImageView
                android:id="@+id/statusCheck"
                android:layout_width="@dimen/width.xlarge"
                android:layout_height="wrap_content"
                android:layout_below="@+id/statusTv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_1sdp"
                android:src="@drawable/inactive_icon" />

        </RelativeLayout>

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvNotice"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_weight="2"
            android:background="@drawable/button_gray_round"
            android:gravity="center"
            android:text="نوٹس"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            app:fontName="jameel_noori_nastaleeq.ttf" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvDemand"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_weight="2"
            android:background="@drawable/button_green_round"
            android:gravity="center"
            android:text="ڈیمانڈ"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            app:fontName="jameel_noori_nastaleeq.ttf" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/infoLay"
        android:layout_below="@+id/llInlineTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvConnectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/_good_sattelite"
            android:drawablePadding="@dimen/_18sdp"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingTop="@dimen/_4sdp"
            android:text="Good Connection"
            android:textColor="@color/white"
            android:visibility="visible"
            app:fontName="roboto_regular.ttf" />

        <com.bykea.pk.partner.widgets.AutoFitFontTextView
            android:id="@+id/tvFenceError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color.error"
            android:drawablePadding="@dimen/_18sdp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="@dimen/_8sdp"
            android:text="Non Service Area"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/rl_setDestination"
        android:layout_below="@+id/infoLay"
        android:visibility="visible"
        tools:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tv_selectDestination"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="منزل منتخب کریں"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            android:visibility="visible"
            app:fontName="jameel_noori_nastaleeq.ttf"/>

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_destinationSelected"
        android:layout_below="@+id/infoLay"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center_vertical">

        <com.bykea.pk.partner.widgets.AutoFitFontTextView
            android:id="@+id/tv_destinationName"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="visible"
            android:text="Saddar"
            app:fontName="roboto_light.ttf"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"/>

        <View
            android:background="@color/grey"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tv_destinationSelected"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_9sdp"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="منتخب منزل"
            android:gravity="center"
            app:fontName="jameel_noori_nastaleeq.ttf"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"/>


    </LinearLayout>
            <View
                android:layout_below="@+id/rl_destinationSelected"
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp" />
</RelativeLayout>