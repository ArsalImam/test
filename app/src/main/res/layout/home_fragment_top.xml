<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clickable="true">


    <LinearLayout
        android:id="@+id/llInlineTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:background="@color/windowBackground"
        android:orientation="horizontal"
        android:padding="@dimen/padding.tiny"
        android:weightSum="9">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center">

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/statusTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:text="INACTIVE"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_13sdp"
                app:fontName="roboto_bold.ttf" />

            <ImageView
                android:id="@+id/statusCheck"
                android:layout_width="@dimen/width.xlarge"
                android:layout_height="wrap_content"
                android:layout_below="@+id/statusTv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_1sdp"
                android:src="@drawable/inactive_icon" />

        </RelativeLayout>

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvNotice"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_weight="2"
            android:background="@drawable/button_gray_round"
            android:gravity="center"
            android:text="نوٹس"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            app:fontName="jameel_noori_nastaleeq.ttf" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvDemand"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_weight="2"
            android:background="@drawable/button_green_round"
            android:gravity="center"
            android:text="ڈیمانڈ"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            app:fontName="jameel_noori_nastaleeq.ttf" />


    </LinearLayout>


    <com.bykea.pk.partner.widgets.FontTextView
        android:id="@+id/tvConnectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llInlineTop"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/_good_sattelite"
        android:drawablePadding="@dimen/_18sdp"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/_4sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingTop="@dimen/_4sdp"
        android:text="Good Connection"
        android:textColor="@color/white"
        android:visibility="visible"
        app:fontName="roboto_regular.ttf" />

    <com.bykea.pk.partner.widgets.AutoFitFontTextView
        android:id="@+id/tvFenceError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llInlineTop"
        android:background="@color/color.error"
        android:drawablePadding="@dimen/_18sdp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="@dimen/_8sdp"
        android:text="Non Service Area"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone" />

</RelativeLayout>