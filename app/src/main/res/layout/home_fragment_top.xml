<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/llInlineTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@color/windowBackground"
            android:orientation="horizontal"
            android:padding="@dimen/padding.tiny">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="top|center_horizontal">

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:id="@+id/statusTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:gravity="center_horizontal|bottom"
                        android:text="INACTIVE"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_13sdp"
                        app:fontName="roboto_bold.ttf" />

                    <ImageView
                        android:id="@+id/statusCheck"
                        android:layout_width="@dimen/width.xlarge"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/statusTv"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="@dimen/_1sdp"
                        android:src="@drawable/inactive_icon" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="vertical">

                <com.bykea.pk.partner.widgets.FontTextView
                    android:id="@+id/driverNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginLeft="@dimen/margin.small"
                    android:layout_marginRight="@dimen/margin.small"
                    android:background="@drawable/green_square_bg"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="Partner Name"
                    android:textColor="@color/buttonTextColor"
                    app:fontName="roboto_bold.ttf" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="bottom"
                    android:paddingTop="@dimen/_2sdp">

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:id="@+id/driverRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating 0"
                        android:textColor="@color/textColorPrimary"
                        app:fontName="roboto_bold.ttf" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="top"
                    android:paddingBottom="@dimen/_12sdp">

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:id="@+id/cityTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/textsize.small.medium"
                        android:visibility="visible"
                        app:fontName="roboto_bold.ttf" />

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:id="@+id/plateNoTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cityTv"
                        android:drawablePadding="8dp"
                        android:gravity="top|center_horizontal"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/textsize.small.medium"
                        app:fontName="roboto_bold.ttf" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="top"
                    android:paddingTop="@dimen/_1sdp">


                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <com.bykea.pk.partner.widgets.FontTextView
        android:id="@+id/tvConnectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llInlineTop"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/_good_sattelite"
        android:drawablePadding="@dimen/_18sdp"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/_4sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingTop="@dimen/_4sdp"
        android:text="Good Connection"
        android:visibility="visible"
        android:textColor="@color/white"
        app:fontName="roboto_regular.ttf" />

    <com.bykea.pk.partner.widgets.FontTextView
        android:id="@+id/tvFenceError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llInlineTop"
        android:background="@color/color.error"
        android:drawablePadding="@dimen/_18sdp"
        android:gravity="center_vertical"
        android:padding="@dimen/_8sdp"
        android:text="Non Service Area"
        android:visibility="gone"
        android:textColor="@color/white"
        app:fontName="roboto_regular.ttf" />

</RelativeLayout>