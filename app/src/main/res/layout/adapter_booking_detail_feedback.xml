<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="item"
            type="java.lang.String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/tvMsg4"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:background="@drawable/bg_unselected_feedback_comment"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/feedback_padding"
                android:paddingTop="@dimen/feedback_padding"
                android:paddingRight="@dimen/feedback_padding"
                android:paddingBottom="@dimen/feedback_padding_bottom"
                android:text="@{item}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_feedback"
                app:fontName="jameel_noori_nastaleeq.ttf" />
        </LinearLayout>
    </LinearLayout>
</layout>