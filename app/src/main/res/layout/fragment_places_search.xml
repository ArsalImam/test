<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:background="@color/windowBackground"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rlSavePlace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ivStar"
                android:layout_toStartOf="@+id/ivStar"
                android:orientation="vertical">

                <com.bykea.pk.partner.widgets.FontTextView
                    android:id="@+id/tvPlaceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="roboto_bold.ttf"
                    tools:text="Kayaban-e-ittahad" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:id="@+id/tvPlaceAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="roboto_regular.ttf"
                    tools:text="Kayaban-e-ittahad" />
            </LinearLayout>


            <ImageView
                android:id="@+id/ivStar"
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_star_grey" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDropDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/border_form"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="3"
            tools:visibility="gone">


            <com.bykea.pk.partner.widgets.DownOnlyAutoCompleteTextView
                android:id="@+id/autocomplete_places"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/ivSearchIcon"
                android:layout_toStartOf="@+id/ivSearchIcon"
                android:background="@color/transparent"
                android:drawablePadding="@dimen/padding.small"
                android:dropDownAnchor="@+id/rlDropDown"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Search"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:maxWidth="@dimen/_24sdp"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingRight="@dimen/_10sdp"
                android:scrollbars="vertical"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.normal" />


            <ImageView
                android:id="@+id/ivSearchIcon"
                android:layout_width="@dimen/height.large.medium"
                android:layout_height="@dimen/height.large.medium"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_search_grey"
                android:visibility="visible" />


        </RelativeLayout>

        <ProgressBar
            android:id="@+id/loader"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-8dp"
            android:layout_marginTop="-4dp"
            android:indeterminate="true" />

    </android.support.v7.widget.CardView>


    <FrameLayout
        android:id="@+id/activity_confirm_destination"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.bykea.pk.partner.widgets.CustomMapView
            android:id="@+id/confirmMapFragment"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <RelativeLayout
            android:id="@+id/rlNoDriverFound"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:paddingBottom="@dimen/map.padding.bottom"
            android:visibility="invisible">

            <FrameLayout
                android:id="@+id/bgNoDriver"
                android:layout_width="260dp"
                android:layout_height="53dp"
                android:background="@drawable/black_background_icon">

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:gravity="center"
                    android:text="No Bykea Available"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />
            </FrameLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_below="@+id/bgNoDriver"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/green_down_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlFrom"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:paddingBottom="@dimen/map.padding.bottom"
            android:visibility="visible">

            <View
                android:id="@+id/bg"
                android:layout_width="265dp"
                android:layout_height="53dp"
                android:background="@drawable/current_location_dialog_bg" />

            <LinearLayout
                android:id="@+id/chooseDropoff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="8dp">


                <LinearLayout
                    android:id="@+id/pickUpLl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <com.bykea.pk.partner.widgets.AutoFitFontTextView
                        android:id="@+id/tvFromName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="@string/set_pickup_location"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/textsize.body3"
                        app:fontName="roboto_regular.ttf" />

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:id="@+id/tvFromAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_4sdp"
                        android:text="Islamabad"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="11sp"
                        app:fontName="roboto_light.ttf" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_below="@+id/bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/map_pin" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/confirmBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height.xlarge"
            android:layout_gravity="bottom"
            android:background="@drawable/button_green_square"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/height.xlarge"
                android:layout_height="@dimen/height.xlarge"
                android:layout_gravity="center"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/check_mark" />
        </FrameLayout>


    </FrameLayout>

</LinearLayout>
