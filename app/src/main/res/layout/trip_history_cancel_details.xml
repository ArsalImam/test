<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <View
        android:id="@+id/toolbarLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/activity_history_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondaryColorLight"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingLeft="@dimen/padding.normal"
                android:paddingTop="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/green_circle" />

                        <com.bykea.pk.partner.widgets.DashedLine
                            android:id="@+id/dotted_line"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_horizontal"
                            android:layerType="software"
                            android:visibility="gone"
                            app:dashColor="@color/Color_Gray"
                            app:dashGap="@dimen/_1sdp"
                            app:dashLength="@dimen/_2sdp"
                            app:dashThickness="@dimen/_1sdp"
                            app:orientation="vertical" />

                        <ImageView
                            android:id="@+id/ic_pin"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/drop_off_map"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:id="@+id/startAddressTv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height.large"
                        android:layout_gravity="center"
                        android:drawablePadding="@dimen/padding.normal"
                        android:gravity="left|center_vertical"
                        android:maxLines="1"
                        android:padding="@dimen/padding.tiny"
                        android:textColor="@color/secondaryColorDark"
                        android:textSize="@dimen/textsize.small.medium"
                        app:fontName="roboto_light.ttf" />


                    <View
                        android:id="@+id/centerLine"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/secondaryColorDark"
                        android:visibility="gone" />

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:id="@+id/endAddressTv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height.large"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:drawablePadding="@dimen/padding.normal"
                        android:gravity="left|center_vertical"
                        android:maxLines="1"
                        android:padding="@dimen/padding.tiny"
                        android:textColor="@color/secondaryColorDark"
                        android:textSize="@dimen/textsize.small.medium"
                        android:visibility="gone"
                        app:fontName="roboto_light.ttf" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.large"
                android:layout_marginLeft="@dimen/margin.normal"
                android:layout_marginRight="@dimen/margin.normal"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center_vertical">

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/windowBackground"
                    android:gravity="left|center_vertical"
                    android:text="Customer Name"
                    android:textColor="@color/finestBlack"
                    android:textSize="@dimen/textsize.normal"
                    app:fontName="roboto_regular.ttf" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:id="@+id/nameTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/windowBackground"
                    android:gravity="right|center_vertical"
                    android:maxLength="22"
                    android:maxLines="1"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize.normal"
                    app:fontName="roboto_light.ttf"
                    tools:text="Muhammad Salman Qureshi" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.large"
                android:layout_marginLeft="@dimen/margin.normal"
                android:layout_marginRight="@dimen/margin.normal"
                android:gravity="center_vertical">


                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/windowBackground"
                    android:gravity="left|center_vertical"
                    android:text="Booking Time"
                    android:textColor="@color/finestBlack"
                    android:textSize="@dimen/textsize.normal"
                    app:fontName="roboto_regular.ttf" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:id="@+id/timeTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/windowBackground"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize.normal"
                    app:fontName="roboto_light.ttf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.large"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/margin.normal"
                android:layout_marginRight="@dimen/margin.normal"
                android:gravity="center_vertical">


                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/windowBackground"
                    android:gravity="left|center_vertical"
                    android:text="Service Type"
                    android:textColor="@color/finestBlack"
                    android:textSize="@dimen/textsize.normal"
                    app:fontName="roboto_regular.ttf" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:id="@+id/serviceTypeTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/windowBackground"
                    android:gravity="right|center_vertical"
                    android:inputType="textCapSentences"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize.normal"
                    app:fontName="roboto_light.ttf" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/divider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.large"
                android:layout_marginLeft="@dimen/margin.normal"
                android:layout_marginRight="@dimen/margin.normal"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center_vertical">


                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/windowBackground"
                    android:gravity="left|center_vertical"
                    android:text="Cancelled By"
                    android:textColor="@color/finestBlack"
                    android:textSize="@dimen/textsize.normal"
                    app:fontName="roboto_regular.ttf" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:id="@+id/tvCancelBy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/windowBackground"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize.normal"
                    app:fontName="roboto_light.ttf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.large"
                android:layout_marginBottom="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/margin.normal"
                android:layout_marginRight="@dimen/margin.normal"
                android:gravity="center_vertical">


                <com.bykea.pk.partner.widgets.FontTextView
                    android:id="@+id/tvCancelFeeLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/windowBackground"
                    android:gravity="left|center_vertical"
                    android:text="Cancellation Fee"
                    android:textColor="@color/finestBlack"
                    android:textSize="@dimen/textsize.normal"
                    app:fontName="roboto_regular.ttf" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:id="@+id/tvCancelFee"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/windowBackground"
                    android:gravity="right|center_vertical"
                    android:inputType="textCapSentences"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize.normal"
                    app:fontName="roboto_light.ttf" />

            </LinearLayout>

            <View
                android:id="@+id/lastLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/divider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin.normal"
                android:layout_marginRight="@dimen/margin.normal"
                android:gravity="center_vertical">


                <com.bykea.pk.partner.widgets.FontTextView
                    android:id="@+id/tvTotalLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/windowBackground"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/_8sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:text="Total"
                    android:textColor="@color/finestBlack"
                    android:textSize="@dimen/textsize.large"
                    app:fontName="roboto_regular.ttf" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:id="@+id/totalAmountTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/windowBackground"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize.large"
                    app:fontName="roboto_regular.ttf" />

            </LinearLayout>


            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/btnProblem"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/button_gray_round"
                android:gravity="center"
                android:text="PROBLEM?"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                app:fontName="roboto_bold.ttf" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>