<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.bykea.pk.partner.widgets.FontTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:text="@string/booking_multidelivery_complete_title"
        android:textSize="@dimen/_24sdp"
        android:textColor="@color/color_616161"
        app:fontName="jameel_noori_nastaleeq.ttf" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/ride_recycler_view"
        android:layout_width="match_parent"
        tools:listitem="@layout/multidelivery_ride_complete_row"
        android:layout_height="wrap_content"/>

</LinearLayout>