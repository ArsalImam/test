<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activities.DeliveryScheduleDetailActivity">

    <include layout="@layout/custom_toolbar" />

    <View
        android:id="@+id/toolbarLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutupper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:orientation="vertical">

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/distanceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5  km"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_18sdp"
                app:fontName="open_sans_regular.ttf" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/addressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="21 Street, Block 5"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_12sdp"
                app:fontName="open_sans_regular.ttf" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/durationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="3 hrs 45 mins"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_12sdp"
                app:fontName="open_sans_regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footerlayout"
            android:layout_below="@+id/layoutupper"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/directionBtn"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/direction_large" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:text="Fazal Hussain"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_16sdp"
                    app:fontName="open_sans_regular.ttf" />

                <ImageView
                    android:id="@+id/callbtn"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:src="@drawable/whatsapp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/footerlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d80027" />

                <ImageView
                    android:id="@+id/closeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@color/white"
                    android:padding="16dp"
                    android:src="@drawable/cancel_1" />

            </FrameLayout>

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/assignBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_green_no_rounded_corner"
                android:gravity="center"
                android:text="@string/button.text.start"
                android:textAllCaps="true"
                android:textColor="@color/buttonTextColor"
                android:textSize="@dimen/textsize.xlarge"
                android:textStyle="bold"
                app:fontName="jameel_noori_nastaleeq.ttf" />


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>