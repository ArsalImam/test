<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:visibility="visible">

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:padding="@dimen/_3sdp"
            android:text="Balance"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize.wallet"
            app:fontName="roboto_regular.ttf" />


        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/totalAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:padding="@dimen/_3sdp"
            android:text="Rs 0"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize.wallet"
            app:fontName="roboto_regular.ttf" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlTop"
        android:background="@color/secondaryColorLight"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_4sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:paddingTop="@dimen/_7sdp"
        android:visibility="invisible"
        tools:visibility="visible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">

            <com.bykea.pk.partner.widgets.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/unwan_text"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_14sdp"
                app:fontName="jameel_noori_nastaleeq.ttf" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">

            <com.bykea.pk.partner.widgets.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/raqam_text"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_14sdp"
                app:fontName="jameel_noori_nastaleeq.ttf" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <com.bykea.pk.partner.widgets.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/transfer_text"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_14sdp"
                app:fontName="jameel_noori_nastaleeq.ttf" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">


            <com.bykea.pk.partner.widgets.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/balance_text"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_14sdp"
                app:fontName="jameel_noori_nastaleeq.ttf" />

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llTitle">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/walletHistoryRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>


    </FrameLayout>

    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlTop"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="@dimen/margin.normal" />

    <ImageView
        android:id="@+id/noDataIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlTop"
        android:layout_gravity="center"
        android:visibility="gone" />

</RelativeLayout>


