<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/country_dialog_bg"
    android:orientation="vertical">


    <com.bykea.pk.partner.widgets.FontTextView
        android:id="@+id/cancelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin.normal"
        android:gravity="center"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/_22sdp"
        app:fontName="roboto_bold.ttf"
        tools:text="@string/permissions_required" />

    <com.bykea.pk.partner.widgets.FontTextView
        android:id="@+id/tvErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin.small"
        android:layout_marginBottom="@dimen/_12sdp"
        android:gravity="center"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:textColor="@color/secondaryColorDark"
        android:textSize="@dimen/_14sdp"
        tools:text="@string/permission_msg_audio" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">


        <ImageView
            android:id="@+id/ivNegative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/button_greyhot"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/close_browser"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivPositive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/button_green"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/correct_symbol" />

    </LinearLayout>

</LinearLayout>
