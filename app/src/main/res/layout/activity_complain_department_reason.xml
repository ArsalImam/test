<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.complain.ComplainDepartmentReasonActivity">

    <data>

        <variable
            name="viewModel"
            type="com.bykea.pk.partner.ui.complain.ComplainDepartmentReasonViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/custom_toolbar_right" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recViewComplainDepartmentReason"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:items="@{viewModel.items}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>
</layout>