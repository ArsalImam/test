<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/country_dialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin.normal"
            android:layout_marginTop="@dimen/margin.normal"
            android:gravity="center"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_22sdp"
            app:fontName="jameel_noori_nastaleeq.ttf" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">


            <ImageView
                android:id="@+id/negativeBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.xlarge"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/button_grey_square"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/close_browser" />

            <ImageView
                android:id="@+id/positiveBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.xlarge"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/button_green_square"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/correct_symbol_square" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>