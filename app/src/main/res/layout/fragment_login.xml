<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_bykea_partner_logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin.small"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_21sdp"
            android:paddingRight="@dimen/_21sdp">

            <LinearLayout
                android:id="@+id/llIv1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:id="@+id/ivMobileNumber"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_mobile_number_simple" />
            </LinearLayout>

            <com.bykea.pk.partner.widgets.FontEditText
                android:id="@+id/phoneNumberEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/llIv1"
                android:layout_alignTop="@id/llIv1"
                android:layout_marginLeft="@dimen/margin.normal"
                android:layout_marginRight="@dimen/margin.normal"
                android:layout_toRightOf="@id/llIv1"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:gravity="left|center_vertical"
                android:hint="@string/hint.phone.number"
                android:inputType="numberPassword"
                android:maxLength="11"
                android:textColorHint="@color/secondaryColorLight"
                android:textSize="@dimen/textsize.body2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/phoneNumberEt"
                android:background="@color/textColorSecondary"
                android:visibility="visible" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin.normal"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_21sdp"
            android:paddingRight="@dimen/_21sdp">

            <LinearLayout
                android:id="@+id/llIv2"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:id="@+id/ivKhufiaCode"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_khufia_code" />
            </LinearLayout>

            <com.bykea.pk.partner.widgets.FontEditText
                android:id="@+id/pinCodeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/llIv2"
                android:layout_alignTop="@id/llIv2"
                android:layout_marginLeft="@dimen/margin.normal"
                android:layout_marginRight="@dimen/margin.normal"
                android:layout_toRightOf="@id/llIv2"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:gravity="left|center_vertical"
                android:hint="Pin Code"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColorHint="@color/secondaryColorLight"
                android:textSize="@dimen/textsize.body2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/pinCodeTv"
                android:background="@color/textColorSecondary"
                android:visibility="visible" />


        </RelativeLayout>
