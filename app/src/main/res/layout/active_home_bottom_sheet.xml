<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <FrameLayout
        android:id="@+id/bottomSheetToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/white"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bottomSheetBackIV"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_9sdp"
            app:srcCompat="@mipmap/icon_backarrow_green" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bottomSheetRefreshIV"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            app:srcCompat="@mipmap/icon_refresh" />
    </FrameLayout>

    <View
        android:id="@+id/bottomSheetToolbarDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorAccent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottomSheetPickDropLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:paddingStart="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/icon_dropdown_gray" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/bottomSheetDropTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/drop_ur"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                app:fontName="jameel_noori_nastaleeq.ttf" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/secondaryColorLightest1" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:paddingStart="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/icon_dropdown_gray" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/bottomSheetPickTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/pick_ur"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                app:fontName="jameel_noori_nastaleeq.ttf" />
        </RelativeLayout>
    </LinearLayout>


    <View
        android:id="@+id/bottomSheetPickDropDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/secondaryColorLightest1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activeHomeLoadBoardList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/bottomSheetNoJobsAvailableTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No jobs available"
            android:padding="@dimen/_20sdp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"/>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/bottomSheetLoader"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_20sdp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>