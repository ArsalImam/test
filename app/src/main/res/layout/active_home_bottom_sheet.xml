<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <FrameLayout
        android:id="@+id/bottomSheetToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/white"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/bottomSheetBackIV"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_15sdp"
            app:srcCompat="@mipmap/icon_backarrow_green" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/bottomSheetRefreshIV"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            app:srcCompat="@mipmap/icon_refresh" />
    </FrameLayout>

    <View
        android:id="@+id/bottomSheetToolbarDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorAccent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottomSheetPickDropLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone">

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/bottomSheetDropTV"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:drawableStart="@drawable/down_arrow"
            android:drawableLeft="@drawable/down_arrow"
            android:paddingStart="@dimen/_8sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:text="@string/drop_ur"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            app:fontName="jameel_noori_nastaleeq.ttf" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/secondaryColorLightest1" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/bottomSheetPickTV"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:drawableStart="@drawable/down_arrow"
            android:drawableLeft="@drawable/down_arrow"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/_8sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:text="@string/pick_ur"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            app:fontName="jameel_noori_nastaleeq.ttf" />


    </LinearLayout>


    <View
        android:id="@+id/bottomSheetPickDropDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/secondaryColorLightest1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activeHomeLoadBoardList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

</LinearLayout>