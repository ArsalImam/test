<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:gravity="center"
    android:background="@drawable/country_dialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/cancelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin.small"
            android:gravity="center"
            android:text="CHECK SMS"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize.body2" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin.tiny"
            android:layout_marginTop="@dimen/margin.small"
            android:gravity="center"
            android:text="@string/verification_code_sent"
            android:textColor="@color/secondaryColorDark" />

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/_8sdp"
        app:srcCompat="@drawable/ic_forgot_pass_dialog" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <com.bykea.pk.partner.widgets.FontButton
            android:id="@+id/ivPositive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_green"
            android:text="OK"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>
