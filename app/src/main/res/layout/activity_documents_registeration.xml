<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/mainScrollView"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <fragment
                android:id="@+id/player_fragment"
                android:name="com.google.android.youtube.player.YouTubePlayerFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center" />

            <ImageView
                android:id="@+id/ivThumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ytIcon"
                android:layout_width="@dimen/_72sdp"
                android:layout_height="@dimen/_72sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/youtube_1" />


        </FrameLayout>
<!--
        <ImageView
            android:id="@+id/ivOriginal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:scaleType="centerInside" />


        <ImageView
            android:id="@+id/ivCompressed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:scaleType="centerInside" />-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvDocuments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/secondaryColorLight" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_28sdp"
            app:cardCornerRadius="@dimen/_3sdp">

            <com.bykea.pk.partner.widgets.FontTextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#0acccb"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="Optional"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp" />

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin.small"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_21sdp"
            android:paddingRight="@dimen/_21sdp">

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/llIv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right|bottom"
                android:paddingBottom="@dimen/_1sdp"
                android:paddingRight="@dimen/_4sdp"
                android:paddingTop="@dimen/_4sdp"
                android:text="ای میل"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_16sdp"
                app:fontName="jameel_noori_nastaleeq.ttf"
                app:srcCompat="@drawable/ic_mobile_number_simple" />

            <com.bykea.pk.partner.widgets.FontEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/llIv1"
                android:layout_alignTop="@id/llIv1"
                android:layout_toLeftOf="@id/llIv1"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:gravity="left|center_vertical"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLength="54"
                android:paddingLeft="@dimen/_6sdp"
                android:textColorHint="@color/secondaryColorLight"
                android:textSize="@dimen/textsize.body2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/etEmail"
                android:background="@color/textColorSecondary"
                android:visibility="visible" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_21sdp"
            android:paddingRight="@dimen/_21sdp">

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/llIv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right|bottom"
                android:paddingBottom="@dimen/_1sdp"
                android:paddingRight="@dimen/_4sdp"
                android:paddingTop="@dimen/_4sdp"
                android:text="ریفرینس نمبر"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_16sdp"
                app:fontName="jameel_noori_nastaleeq.ttf"
                app:srcCompat="@drawable/ic_mobile_number_simple" />


            <com.bykea.pk.partner.widgets.FontEditText
                android:id="@+id/phoneNumberEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/llIv2"
                android:layout_alignTop="@id/llIv2"
                android:layout_toLeftOf="@id/llIv2"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:gravity="left|center_vertical"
                android:hint="Reference Number"
                android:inputType="numberPassword"
                android:maxLength="11"
                android:paddingLeft="@dimen/_6sdp"
                android:textColorHint="@color/secondaryColorLight"
                android:textSize="@dimen/textsize.body2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/phoneNumberEt"
                android:background="@color/textColorSecondary"
                android:visibility="visible" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin.normal"
                android:background="@drawable/button_green_square"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/correct_symbol" />
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>