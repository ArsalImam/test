<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_2sdp"
        android:paddingLeft="@dimen/_6sdp"
        android:paddingRight="@dimen/_6sdp"
        android:paddingTop="@dimen/_2sdp"
        android:weightSum="2">

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/titleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Cook"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_14sdp"
            app:fontName="roboto_light.ttf" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/titleUrduName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingEnd="@dimen/_28sdp"
            android:paddingRight="@dimen/_28sdp"
            android:text="نوکرئ"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_14sdp"
            app:fontName="jameel_noori_nastaleeq.ttf" />

    </LinearLayout>

    <View
        android:id="@+id/singleViewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/llTop"
        android:background="@color/secondaryColorLight" />
</RelativeLayout>