<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/windowBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="top"
        android:orientation="vertical">

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="بائیکیا"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_64sdp"
            android:textStyle="bold"
            android:visibility="gone"
            app:fontName="roboto_regular.ttf" />

        <ImageView
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:src="@drawable/layer_3"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin.small"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_21sdp"
            android:paddingRight="@dimen/_21sdp">

            <LinearLayout
                android:id="@+id/llIv1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="end">

                <ImageView
                    android:id="@+id/ivMobileNumber"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_mobile_number_simple" />
            </LinearLayout>
            <!--<com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/ivMobileNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right|bottom"
                android:padding="@dimen/_8sdp"
                android:text="موبائل نمبر"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_14sdp"
                app:fontName="jameel_noori_nastaleeq.ttf"
                app:srcCompat="@drawable/ic_mobile_number_simple" />
-->
            <com.bykea.pk.partner.widgets.FontEditText
                android:id="@+id/phoneNumberEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/llIv1"
                android:layout_alignTop="@id/llIv1"
                android:layout_toLeftOf="@id/llIv1"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:gravity="left|center_vertical"
                android:hint="@string/hint.phone.number"
                android:inputType="numberPassword"
                android:maxLength="11"
                android:paddingLeft="@dimen/_6sdp"
                android:textColorHint="@color/secondaryColorLight"
                android:textSize="@dimen/textsize.body2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/phoneNumberEt"
                android:layout_marginTop="-6dp"
                android:background="@color/textColorSecondary"
                android:visibility="visible" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin.normal"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_21sdp"
            android:paddingRight="@dimen/_21sdp">

            <LinearLayout
                android:id="@+id/llIv2"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="end">

                <ImageView
                    android:id="@+id/ivKhufiaCode"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_khufia_code" />
            </LinearLayout>


            <!-- <com.bykea.pk.partner.widgets.FontTextView
                 android:id="@+id/ivKhufiaCode"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:gravity="right|bottom"
                 android:padding="@dimen/_8sdp"
                 android:text="خفیہ کوڈ"
                 android:textColor="@color/colorAccent"
                 android:textSize="@dimen/_14sdp"
                 app:fontName="jameel_noori_nastaleeq.ttf"
                 app:srcCompat="@drawable/ic_mobile_number_simple" />
 -->

            <com.bykea.pk.partner.widgets.FontEditText
                android:id="@+id/pinCodeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/llIv2"
                android:layout_alignTop="@id/llIv2"
                android:layout_toLeftOf="@id/llIv2"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:gravity="left|center_vertical"
                android:hint="Pin Code"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:paddingLeft="@dimen/_6sdp"
                android:textColorHint="@color/secondaryColorLight"
                android:textSize="@dimen/textsize.body2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/pinCodeTv"
                android:layout_marginTop="-6dp"
                android:background="@color/textColorSecondary"
                android:visibility="visible" />


        </RelativeLayout>


        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin.small"
            android:layout_marginBottom="@dimen/margin.small"
            android:padding="@dimen/padding.tiny"
            android:text="میں بائیکیا کے  شرائط و ضوابط سے اتفاق کرتا ہوں"
            android:textColor="#273bff"
            android:textSize="@dimen/_14sdp"
            app:fontName="jameel_noori_nastaleeq.ttf" />

        <ImageView
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin.normal"
            android:layout_marginRight="@dimen/margin.normal"
            android:background="@drawable/button_green"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/correct_symbol" />


        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/forgotPassTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin.small"
            android:padding="@dimen/padding.tiny"
            android:text="میں موجودہ بائیکیا پارٹنر ہوں اور خفیہ کوڈ بھول گیا ہوں"
            android:textColor="@color/textColorPrimary1"
            android:textSize="@dimen/_14sdp"
            app:fontName="jameel_noori_nastaleeq.ttf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.9dp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@color/secondaryColorLight"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/registerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_28sdp"
                android:background="@drawable/button_green"
                android:gravity="center"
                android:paddingBottom="@dimen/_6sdp"
                android:paddingTop="@dimen/_6sdp"
                android:text="بائیکیا پارٹنر بننے کے لئے کلک کریں"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"
                android:visibility="visible"
                app:fontName="jameel_noori_nastaleeq.ttf" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>
