<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calling"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:gravity="center"
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/bg_call_header"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llRating"
                android:layout_width="@dimen/_41sdp"
                android:layout_height="@dimen/_41sdp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rating_circle_call"
                android:gravity="center"
                android:orientation="vertical">

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="4.4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    app:fontName="open_sans_regular.ttf" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="rating"
                    android:textColor="@color/color_191919"
                    android:textSize="@dimen/_6sdp"
                    app:fontName="open_sans_regular.ttf" />

            </LinearLayout>

            <com.bykea.pk.partner.widgets.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llRating"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text=" کسٹمر"
                android:textColor="@color/color_5a5a5a"
                android:textSize="@dimen/_12sdp"
                app:fontName="jameel_noori_nastaleeq.ttf" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivCallType"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/ride" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llDistance"
                android:layout_width="@dimen/_41sdp"
                android:layout_height="@dimen/_41sdp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/distance_circle_call"
                android:gravity="center"
                android:orientation="vertical">

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="0.2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    app:fontName="open_sans_regular.ttf" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="km"
                    android:textColor="@color/color_191919"
                    android:textSize="@dimen/_6sdp"
                    app:fontName="open_sans_regular.ttf" />

            </LinearLayout>

            <com.bykea.pk.partner.widgets.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llDistance"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="دور"
                android:textColor="@color/color_5a5a5a"
                android:textSize="@dimen/_12sdp"
                app:fontName="jameel_noori_nastaleeq.ttf" />


        </RelativeLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/acceptCallBtn"
        android:layout_below="@+id/headerLayout"
        android:paddingBottom="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_calling_layout">

                <LinearLayout
                    android:id="@+id/circle_distance_layout"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/distance_green_circle_call"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        app:fontName="open_sans_regular.ttf" />

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="km"
                        android:textColor="@color/color_191919"
                        android:textSize="@dimen/_6sdp"
                        app:fontName="open_sans_regular.ttf" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/circle_manzil_layout"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/circle_manzil_call"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="منزل "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        app:fontName="jameel_noori_nastaleeq.ttf" />


                </LinearLayout>


                <com.bykea.pk.partner.widgets.FontTextView
                    android:id="@+id/destinationTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Sadar Town"
                    android:textColor="@color/color_5a5a5a"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="open_sans_regular.ttf"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.035"
                    app:layout_constraintLeft_toRightOf="@id/circle_distance_layout"
                    app:layout_constraintRight_toLeftOf="@+id/circle_manzil_layout"
                    app:layout_constraintTop_toTopOf="parent" />


            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:id="@+id/llTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/transparent">

                    <ImageView
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/green_circle_bg" />

                    <ImageView
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/green_circle_outline_bg" />

                    <com.bykea.pk.partner.widgets.DonutProgress
                        android:id="@+id/donut_progress"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center"
                        app:donut_finished_color="@color/windowBackground"
                        app:donut_finished_stroke_width="@dimen/_6sdp"
                        app:donut_max="20"
                        app:donut_progress="20"
                        app:donut_tick_stroke_width="@dimen/_1sdp"
                        app:donut_unfinished_stroke_width="@dimen/_6sdp" />


                    <com.bykea.pk.partner.widgets.FontTextView
                        android:id="@+id/counterTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLength="2"
                        android:textColor="@color/buttonTextColor"
                        android:textSize="@dimen/_40sdp"
                        app:fontName="roboto_regular.ttf" />

                </FrameLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_border_call">

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:text=" Rs. 120"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="open_sans_semi_bold.ttf" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:text=" کرائے کی کمائی"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="jameel_noori_nastaleeq.ttf" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/bg_border_call">

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:text=" Rs. 56"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="open_sans_regular.ttf" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:text=" کیش کی وصولی "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="jameel_noori_nastaleeq.ttf" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kharidariPriceLayout"
                android:layout_gravity="center"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/bg_border_call"
                android:visibility="gone">

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:text="Rs. 1,000"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="open_sans_regular.ttf" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:text="خریداری کی رقم"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="jameel_noori_nastaleeq.ttf" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


    <ImageView
        android:id="@+id/acceptCallBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_green_square"
        android:gravity="center"
        android:src="@drawable/check_mark" />

</RelativeLayout>
