<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/margin.small"
        android:layout_marginTop="@dimen/margin.tiny"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_2sdp">

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tripNoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin.tiny"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textsize.normal"
            app:fontName="roboto_regular.ttf" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin.tiny"
            android:drawablePadding="@dimen/_3sdp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize.small.medium"
            app:fontName="roboto_regular.ttf" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/addressLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin.tiny"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/startAddressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:drawablePadding="@dimen/padding.normal"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:maxWidth="@dimen/_190sdp"
                android:padding="@dimen/padding.tiny"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.small"
                app:fontName="roboto_light.ttf" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/endAddressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/startAddressTv"
                android:layout_alignStart="@+id/startAddressTv"
                android:layout_below="@+id/startAddressTv"
                android:drawablePadding="@dimen/padding.normal"
                android:maxLines="1"
                android:maxWidth="@dimen/_200sdp"
                android:padding="@dimen/padding.tiny"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.small"
                app:fontName="roboto_light.ttf" />


            <RelativeLayout
                android:visibility="gone"
                android:layout_width="@dimen/width.normal"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_7sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/green_dot"
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/green_circle_shape" />

                    <com.bykea.pk.partner.widgets.DashedLine
                        android:id="@+id/dotted_line"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center_horizontal"
                        android:layerType="software"
                        android:visibility="visible"
                        app:dashColor="@color/Color_Gray"
                        app:dashGap="@dimen/_1sdp"
                        app:dashLength="@dimen/_2sdp"
                        app:dashThickness="@dimen/_1sdp"
                        app:orientation="vertical" />

                    <ImageView
                        android:id="@+id/ic_pin"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/drop_off_map"
                        android:visibility="visible" />

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin.tiny"
            android:text="cancelled"
            android:textAllCaps="false"
            android:textColor="@color/color.error"
            android:textSize="@dimen/textsize.small.medium"
            android:visibility="visible"
            app:fontName="roboto_regular.ttf" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/width.xxxlarge"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin.medium"
        android:layout_marginTop="@dimen/margin.tiny"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/ratingValueTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin.tiny"
            android:text="Rating 5"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize.small.medium"
            app:fontName="roboto_regular.ttf" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/verifiedTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin.tiny"
            android:gravity="right|center_vertical"
            android:text=""
            android:textColor="@color/color.darker_red"
            android:textSize="@dimen/textsize.small.medium"
            android:visibility="visible"
            app:fontName="roboto_regular.ttf" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/totalAmountTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/margin.normal"
            android:text="N/A"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize.large"
            app:fontName="roboto_regular.ttf" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="bottom"
        android:background="@color/divider" />

    <ImageView
        android:id="@+id/ivRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/margin.small"
        android:src="@drawable/right_arrow_history" />

</FrameLayout>


