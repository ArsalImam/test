<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/black">

            <fragment
                android:id="@+id/player_fragment"
                android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center" />

            <ImageView
                android:id="@+id/ivThumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ytIcon"
                android:layout_width="@dimen/_72sdp"
                android:layout_height="@dimen/_72sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/youtube_1" />


        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_21sdp"
            android:paddingRight="@dimen/_21sdp">

            <LinearLayout
                android:id="@+id/llIv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="end">

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:text="موبائل نمبر"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_14sdp"
                    app:fontName="jameel_noori_nastaleeq.ttf" />

                <!--  <ImageView
                      android:id="@+id/ivMobileNumber"
                      android:layout_width="@dimen/_60sdp"
                      android:layout_height="wrap_content"
                      android:layout_centerInParent="true"
                      android:padding="@dimen/_8sdp"
                      android:scaleType="fitEnd"
                      app:srcCompat="@drawable/ic_mobile_number_simple" />-->
            </LinearLayout>

            <com.bykea.pk.partner.widgets.FontEditText
                android:id="@+id/phoneNumberEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/llIv1"
                android:layout_alignTop="@id/llIv1"
                android:layout_toLeftOf="@id/llIv1"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:gravity="left|center"
                android:hint="@string/hint_phone_number_nofont"
                android:inputType="numberPassword"
                android:maxLength="11"
                android:paddingLeft="@dimen/_6sdp"
                android:textColorHint="@color/secondaryColorLight"
                android:textSize="@dimen/_20sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/phoneNumberEt"
                android:layout_marginTop="-4dp"
                android:background="@color/textColorSecondary"
                android:visibility="visible" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_21sdp"
            android:paddingRight="@dimen/_21sdp">

            <LinearLayout
                android:id="@+id/llIv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="end">

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:text="شناختی کارڈ نمبر"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_14sdp"
                    app:fontName="jameel_noori_nastaleeq.ttf" />

                <!--  <ImageView
                      android:id="@+id/ivMobileNumber"
                      android:layout_width="@dimen/_60sdp"
                      android:layout_height="wrap_content"
                      android:layout_centerInParent="true"
                      android:padding="@dimen/_8sdp"
                      android:scaleType="fitEnd"
                      app:srcCompat="@drawable/ic_mobile_number_simple" />-->
            </LinearLayout>

            <com.bykea.pk.partner.widgets.FontEditText
                android:id="@+id/cnicEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/llIv3"
                android:layout_alignTop="@id/llIv3"
                android:layout_toLeftOf="@id/llIv3"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:gravity="left|center"
                android:hint="CNIC Number"
                android:inputType="numberPassword"
                android:maxLength="13"
                android:paddingLeft="@dimen/_6sdp"
                android:textColorHint="@color/secondaryColorLight"
                android:textSize="@dimen/_20sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/cnicEt"
                android:layout_marginTop="-4dp"
                android:background="@color/textColorSecondary"
                android:visibility="visible" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_21sdp"
            android:paddingRight="@dimen/_21sdp">

            <LinearLayout
                android:id="@+id/llIv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="end|center">


                <ImageView
                    android:id="@+id/ivRight0"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/polygon" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:text="شہر"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_14sdp"
                    app:fontName="jameel_noori_nastaleeq.ttf" />
                <!-- <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerInParent="true"
                     android:padding="@dimen/_8sdp"
                     android:scaleType="fitEnd"
                     app:srcCompat="@drawable/ic_shehar" />-->
            </LinearLayout>

            <Spinner
                android:id="@+id/tvCity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_190sdp"
                android:layout_alignBottom="@id/llIv2"
                android:layout_alignTop="@id/llIv2"
                android:layout_toLeftOf="@id/llIv2"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:dropDownVerticalOffset="@dimen/_38sdp"
                android:gravity="left|center_vertical"
                android:hint="@string/hint_phone_number"
                android:inputType="numberPassword"
                android:maxLength="11"
                android:paddingTop="@dimen/_4sdp"
                android:textColorHint="@color/secondaryColorLight"
                android:textSize="@dimen/textsize.body2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tvCity"
                android:background="@color/textColorSecondary"
                android:visibility="visible" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin.normal"
                android:background="@drawable/button_green_square"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/correct_symbol" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>