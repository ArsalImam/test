<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_2sdp">

    <com.bykea.pk.partner.widgets.FontTextView
        android:id="@+id/tvUrduName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ای میل"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_12sdp"
        app:fontName="jameel_noori_nastaleeq.ttf" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/ivDocument"
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_gravity="center"
            android:src="@drawable/photo_camera_4_copy" />

        <ProgressBar
            android:id="@+id/loaderImage"
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_gravity="start|center"
            android:padding="@dimen/_6sdp"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Your Photo"
            android:textColor="#828282"
            android:textSize="@dimen/_12sdp"
            app:fontName="roboto_regular.ttf" />

        <ProgressBar
            android:id="@+id/loader"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_gravity="start|center"
            android:layout_marginLeft="@dimen/_4sdp"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivUploaded"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_checked"
            tools:visibility="visible" />
    </LinearLayout>


</LinearLayout>

