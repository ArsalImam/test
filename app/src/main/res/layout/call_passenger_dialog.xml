<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_270sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rectangle_green_border"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44sdp"
        android:gravity="center_vertical"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/ivBackBtn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_7sdp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_arrow_back_white"/>

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvTitleEng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Call"
            android:paddingRight="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:gravity="center"/>

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvTitleUrdu"
            android:layout_toRightOf="@id/tvTitleEng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" کال"
            android:layout_centerVertical="true"
            app:fontName="jameel_noori_nastaleeq.ttf"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivSender"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:srcCompat="@drawable/ic_call_answer"
            android:layout_marginTop="@dimen/_15sdp"
            android:padding="@dimen/_15sdp"
            android:background="@drawable/gray_circle"/>

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender"
            android:textColor="@color/grey_percent_30"
            android:textSize="@dimen/_20sdp"/>

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بھیجنے والا"
            android:textColor="@color/grey_percent_30"
            android:textSize="@dimen/_20sdp"
            app:fontName="jameel_noori_nastaleeq.ttf"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/Color_Gray"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"/>

        <ImageView
            android:id="@+id/ivRecipient"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:srcCompat="@drawable/ic_call_answer"
            android:layout_marginTop="@dimen/_15sdp"
            android:padding="@dimen/_15sdp"
            android:background="@drawable/gray_circle"/>

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipient"
            android:textColor="@color/grey_percent_30"
            android:textSize="@dimen/_20sdp"/>

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="وصول کرنے والا"
            android:textColor="@color/grey_percent_30"
            android:textSize="@dimen/_18sdp"
            app:fontName="jameel_noori_nastaleeq.ttf"
            android:layout_marginBottom="@dimen/_10sdp"/>

    </LinearLayout>

</LinearLayout>