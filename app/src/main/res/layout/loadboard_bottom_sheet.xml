<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <FrameLayout
        android:id="@+id/bottomSheetToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/white"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/bottomSheetBackIV"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_9sdp"
            app:srcCompat="@mipmap/icon_backarrow_green" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/bottomSheetRefreshIV"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            app:srcCompat="@mipmap/icon_refresh" />
    </FrameLayout>

    <View
        android:id="@+id/bottomSheetToolbarDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorAccent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottomSheetPickDropLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/color_F4F4F4"
        android:orientation="horizontal">

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/fare"
            android:textColor="@color/dark_gray656565"
            android:textSize="@dimen/_18sdp"
            app:fontName="jameel_noori_nastaleeq.ttf" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/color_grayc7c7c7" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="@string/destination"
            android:textColor="@color/dark_gray656565"
            android:textSize="@dimen/_18sdp"
            app:fontName="jameel_noori_nastaleeq.ttf" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/color_grayc7c7c7" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/service_urdu"
            android:textColor="@color/dark_gray656565"
            android:textSize="@dimen/_18sdp"
            app:fontName="jameel_noori_nastaleeq.ttf" />

    </LinearLayout>

    <View
        android:id="@+id/bottomSheetPickDropDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/secondaryColorLightest1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activeHomeLoadBoardList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/bottomSheetNoJobsAvailableTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_14sdp"
            android:text="@string/wait_for_booking"
            android:textColor="@color/dark_gray656565"
            android:textSize="@dimen/_18sdp"
            android:visibility="gone"
            app:fontName="jameel_noori_nastaleeq.ttf"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/bottomSheetLoader"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_20sdp"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>