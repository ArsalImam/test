<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.CodeVerificationFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp">


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/topIconIv"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin.normal"
            android:background="@drawable/green_square_bg"
            app:srcCompat="@drawable/ic_wait_urdu" />

        />


        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/subtitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin.small"
            android:gravity="center"
            android:singleLine="true"
            android:text="VERIFY THE NUMBER SENT VIA SMS"
            android:textColor="@color/textColorPrimary"
            app:fontName="roboto_light.ttf" />


        <com.bykea.pk.partner.widgets.FontEditText
            android:id="@+id/pinCodeEt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext.height"
            android:layout_marginLeft="@dimen/margin.normal"
            android:layout_marginRight="@dimen/margin.normal"
            android:layout_marginTop="@dimen/margin.medium"
            android:background="@drawable/edittext_bg"
            android:drawablePadding="@dimen/padding.normal"
            android:hint="Verification Code"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:maxLength="4"
            android:paddingLeft="@dimen/padding.normal"
            android:textSize="14sp"
            app:fontName="roboto_light.ttf" />


        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/verifyBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button.next.height"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin.normal"
            android:layout_marginRight="@dimen/margin.normal"
            android:layout_marginTop="@dimen/margin.large"
            android:background="@drawable/button_green"
            android:gravity="center"
            android:text="Verify Mobile"
            android:textAllCaps="true"
            android:textColor="@color/buttonTextColor"
            android:textSize="@dimen/textsize.normal"
            android:textStyle="bold"
            app:fontName="MuseoSans_1.otf" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/resendCodeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin.small"
            android:background="@drawable/button_plane"
            android:padding="@dimen/padding.tiny"
            android:text="Resend Code"
            android:textColor="@color/textColorSecondary"
            app:fontName="roboto_light.ttf" />

    </LinearLayout>


</LinearLayout>
