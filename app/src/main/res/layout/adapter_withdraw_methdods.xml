<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.bykea.pk.partner.ui.helpers.FontTextView
                        android:id="@+id/nic_val_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        app:fontName="jameel_noori_nastaleeq.ttf" />

                    <com.bykea.pk.partner.ui.helpers.FontTextView
                        android:id="@+id/nic_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nic"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        app:fontName="jameel_noori_nastaleeq.ttf" />

                </LinearLayout>


                <com.bykea.pk.partner.ui.helpers.FontTextView
                    android:id="@+id/fees_val_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="-2dp"
                    android:gravity="right|center_vertical"
                    android:text="@string/fees_template_val"
                    android:textColor="@color/black.transparent.1"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="jameel_noori_nastaleeq.ttf" />

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                </LinearLayout>-->
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_green_circle_tick" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>