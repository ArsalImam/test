<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_toLeftOf="@+id/ivRight"
        android:layout_toStartOf="@+id/ivRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_16sdp"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingTop="@dimen/_16sdp">

        <LinearLayout
            android:id="@+id/llLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/dateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_weight="1"
                android:drawablePadding="@dimen/_3sdp"
                android:gravity="center_vertical"
                android:text="22 Aug, 10:44 am."
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_12sdp"
                app:fontName="roboto_regular.ttf" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/totalAmountTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_weight="1"
                android:text="Rs. 90"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.large"
                app:fontName="roboto_bold.ttf" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal"
            android:weightSum="2">


            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/tripNoTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="bottom|start"
                android:text="KHI1602092092"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_14sdp"
                app:fontName="roboto_bold.ttf" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_weight="1"
                android:text="Driver Cancelled"
                android:textColor="@color/color.error"
                android:textSize="@dimen/_12sdp"
                android:visibility="visible"
                app:fontName="roboto_regular.ttf" />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/ivDriverDestination"
        android:src="@drawable/ic_driver_destination"
        android:layout_toLeftOf="@id/ivRight"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_25sdp"/>

    <ImageView
        android:id="@+id/ivRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:src="@drawable/right_arrow_history" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/llTop"
        android:background="@color/divider" />
</RelativeLayout>
