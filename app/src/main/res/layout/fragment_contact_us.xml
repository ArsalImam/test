<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/secondaryColorLightest"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="سپروائزر"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textsize.xlarge"
            app:fontName="jameel_noori_nastaleeq.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/supportCall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="-6dp"
                android:drawableTop="@drawable/contact_call_icon"
                android:gravity="center"
                android:text="کال"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.large"
                app:fontName="jameel_noori_nastaleeq.ttf" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/supportEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="-8dp"
                android:drawableTop="@drawable/ic_error"
                android:gravity="center"
                android:text="رپورٹ"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.large"
                app:fontName="jameel_noori_nastaleeq.ttf" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:visibility="gone"
                android:id="@+id/supportWatsapp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="-8dp"
                android:drawableTop="@drawable/contact_whatsapp_icon"
                android:gravity="center"
                android:text="چیٹ"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.large"
                app:fontName="jameel_noori_nastaleeq.ttf" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/Color_DarkGray"/>

        <View
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Color_DarkGray"/>

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="فنانس"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textsize.xlarge"
            app:fontName="jameel_noori_nastaleeq.ttf" />

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/financeCall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="-6dp"
                android:drawableTop="@drawable/contact_call_icon"
                android:gravity="center"
                android:text="کال"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.large"
                app:fontName="jameel_noori_nastaleeq.ttf" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/financeEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="-8dp"
                android:drawableTop="@drawable/ic_error"
                android:gravity="center"
                android:text="رپورٹ"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.large"
                app:fontName="jameel_noori_nastaleeq.ttf" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:visibility="gone"
                android:id="@+id/financeWatsapp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="-8dp"
                android:drawableTop="@drawable/contact_whatsapp_icon"
                android:gravity="center"
                android:text="چیٹ"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.large"
                app:fontName="jameel_noori_nastaleeq.ttf" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/Color_DarkGray"/>

        <View
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Color_DarkGray"/>

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/fontTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="بینک اکاوٴنٹ"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textsize.xlarge"
            app:fontName="jameel_noori_nastaleeq.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <ImageView
                android:id="@+id/bankAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/contact_bank_icon" />


        </LinearLayout>

        <com.bykea.pk.partner.widgets.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:padding="@dimen/_6sdp"
            android:text="@string/complain_msg"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>