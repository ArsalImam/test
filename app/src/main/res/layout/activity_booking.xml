<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/rlWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_3sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@color/blue_light"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">

                        <com.bykea.pk.partner.widgets.AutoFitFontTextView
                            android:id="@+id/tvPWalletAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:maxWidth="@dimen/_60sdp"
                            android:maxLines="1"
                            android:textAllCaps="false"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible"
                            tools:text="Rs. 30" />

                        <com.bykea.pk.partner.widgets.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:gravity="end|center"
                            android:maxLines="1"
                            android:text="والیٹ"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            app:fontName="jameel_noori_nastaleeq.ttf" />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/ivTopUp"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_gravity="left"
                        android:paddingStart="@dimen/_minus3sdp"
                        android:paddingLeft="@dimen/_minus3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:src="@drawable/circle_plus" />
                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/llTopMiddle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <com.bykea.pk.partner.widgets.AutoFitFontTextView
                        android:id="@+id/tvCodAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textAllCaps="false"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible"
                        tools:text="Rs. 35000" />

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:id="@+id/tvCashWasooliLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:maxLines="1"
                        android:text="وصولی"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="jameel_noori_nastaleeq.ttf" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llTopRight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@color/color_grayf3f3f3"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <com.bykea.pk.partner.widgets.AutoFitFontTextView
                        android:id="@+id/tvFareAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:maxWidth="@dimen/_60sdp"
                        android:maxLines="1"
                        android:textAllCaps="false"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible"
                        tools:text="Rs. 120" />

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:maxLines="1"
                        android:text="@string/karaya_ur"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="jameel_noori_nastaleeq.ttf" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlWallet"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/ivServiceIcon"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ride_right" />

                <LinearLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:id="@+id/tvTripId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        app:fontName="roboto_regular.ttf"
                        tools:text="RWPDNFO" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.bykea.pk.partner.widgets.FontTextView
                            android:id="@+id/tvKm"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content"
                            android:text="KM"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="roboto_bold.ttf" />

                        <com.bykea.pk.partner.widgets.FontTextView
                            android:id="@+id/distanceTv"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tvKm"
                            android:text="0.00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="roboto_bold.ttf" />


                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/voiceNoteRl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/imgViewAudioPlay"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:padding="@dimen/_4sdp"
                        app:srcCompat="@drawable/ic_audio_play" />

                    <ProgressBar
                        android:id="@+id/progressBarForAudioPlay"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:indeterminate="false"
                        android:max="100"
                        android:padding="@dimen/_4sdp"
                        android:progress="80"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </RelativeLayout>
                <!--app:srcCompat="@drawable/ic_call_icon"-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.bykea.pk.partner.widgets.FontTextView
                        android:id="@+id/callerNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible"
                        app:fontName="roboto_regular.ttf"
                        tools:text="Sajid" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <com.bykea.pk.partner.widgets.FontTextView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content"
                            android:text="MIN"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="roboto_bold.ttf" />

                        <com.bykea.pk.partner.widgets.FontTextView
                            android:id="@+id/timeTv"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="roboto_bold.ttf" />

                    </LinearLayout>

                </LinearLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/chatBtn"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:padding="@dimen/_3sdp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_chat_msg" />

                    <TextView
                        android:id="@+id/cartBadge"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="right"
                        android:background="@drawable/bg_notification_badge"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </FrameLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@color/grey_light" />

        <LinearLayout
            android:id="@+id/llStartAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp">

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/ic_drop_off_green" />

            <com.bykea.pk.partner.widgets.AutoFitFontTextView
                android:id="@+id/startAddressTv"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="Street Address"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.small.medium"
                app:fontName="roboto_light.ttf" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/grey_light" />

            <TextView
                android:id="@+id/tvCountDown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/color_red"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEndAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/ic_drop_off_blue" />

            <com.bykea.pk.partner.widgets.AutoFitFontTextView
                android:id="@+id/endAddressTv"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="Street Address"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize.small.medium"
                app:fontName="roboto_light.ttf" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAddressEdit"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:src="@drawable/ic_pencil_icon" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/grey_light" />

            <com.bykea.pk.partner.widgets.FontTextView
                android:id="@+id/tvCountDownEnd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/color_red"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>

        <com.bykea.pk.partner.widgets.AutoFitFontTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_28sdp"
            android:layout_gravity="center_horizontal"
            android:background="@color/secondaryColorLightf2f2f2"
            android:drawableRight="@drawable/ic_pencil_icon"
            android:drawablePadding="@dimen/padding.small"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingStart="@dimen/_8sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingRight="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Enter Drop Off"
            android:textColor="@color/color_red"
            android:textSize="@dimen/textsize.small.medium"
            android:visibility="gone"
            app:fontName="open_sans_regular.ttf"
            tools:visibility="visible" />

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvEstimation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/secondaryColorLight"
            android:gravity="left|center_vertical"
            android:padding="@dimen/_2sdp"
            android:text="Estimated Distance Covered : 00.0 km\nEstimated Time Covered : 00 min"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize.normal"
            android:visibility="gone"
            app:fontName="roboto_bold.ttf" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bykea.pk.partner.widgets.FontTextView
            android:id="@+id/tvDetailsNotEntered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f41d1b"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/_2sdp"
            android:text="@string/trip_details"
            android:textColor="#ffffff"
            android:textSize="@dimen/_18sdp"
            android:visibility="gone"
            app:fontName="jameel_noori_nastaleeq.ttf"
            tools:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llPickUpDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f5f5f5"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/green_dot"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:src="@drawable/circle_booking"
                                android:tint="@color/green_03a83b" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.bykea.pk.partner.widgets.FontTextView
                                    android:id="@+id/tvPickUpCustomerName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"
                                    app:fontName="open_sans_regular.ttf"
                                    tools:text="Akhtar Khan" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <com.bykea.pk.partner.widgets.FontTextView
                                        android:id="@+id/tvPickUpDetailsAddress"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxLines="2"
                                        android:textColor="#676767"
                                        android:textSize="@dimen/_12sdp"
                                        android:visibility="gone"
                                        app:fontName="open_sans_regular.ttf"
                                        tools:text="House# 1, street # 34, block B, DHA" />

                                    <com.bykea.pk.partner.widgets.FontTextView
                                        android:id="@+id/tvPickUpOrderNumber"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxLines="2"
                                        android:textColor="#676767"
                                        android:textSize="@dimen/_12sdp"
                                        android:visibility="gone"
                                        app:fontName="open_sans_regular.ttf"
                                        tools:text="Order # 12345" />

                                </LinearLayout>

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivPickUpCustomerPhone"
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_26sdp"
                                app:srcCompat="@drawable/ic_call_icon" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/vAddressDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:alpha="0.2"
                        android:background="@color/textColorPrimary676767" />

                    <LinearLayout
                        android:id="@+id/llDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f5f5f5"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/blue_line"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:src="@drawable/circle_booking"
                                android:tint="@color/blue_1f81a4" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:orientation="vertical">

                                <com.bykea.pk.partner.widgets.FontTextView
                                    android:id="@+id/tvCustomerName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"
                                    app:fontName="open_sans_regular.ttf"
                                    tools:text="Akhtar Khan" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <com.bykea.pk.partner.widgets.FontTextView
                                        android:id="@+id/tvDetailsAddress"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:maxLines="2"
                                        android:textColor="#676767"
                                        android:textSize="@dimen/_12sdp"
                                        app:fontName="open_sans_regular.ttf"
                                        tools:text="House# 1, street # 34, block B, DHA" />

                                    <com.bykea.pk.partner.widgets.FontTextView
                                        android:id="@+id/tvOrderNumber"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:maxLines="2"
                                        android:textColor="#676767"
                                        android:textSize="@dimen/_12sdp"
                                        android:visibility="gone"
                                        app:fontName="open_sans_regular.ttf"
                                        tools:text="Order # 12345" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivCustomerPhone"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_26sdp"
                            app:srcCompat="@drawable/ic_call_icon" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <!--green_dot
            blue_line
            <com.bykea.pk.partner.widgets.DashedLine
                android:id="@+id/dotted_line"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/green_dot"
                android:layerType="software"
                app:dashColor="@color/Color_Gray"
