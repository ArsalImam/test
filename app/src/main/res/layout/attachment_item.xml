<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealLinearLayout android:orientation="vertical"
    android:padding="@dimen/_4sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/reveal_item"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="@dimen/_4sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/capturePicture"
                    app:srcCompat="@drawable/ic_photo_camera_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:textSize="@dimen/_12sdp"
                    android:text="Camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/_4sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/gallery"
                    app:srcCompat="@drawable/ic_insert_photo_color_primary_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:textSize="@dimen/_12sdp"
                    android:text="Gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/_4sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/video"
                    app:srcCompat="@drawable/ic_slow_motion_video_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.bykea.pk.partner.widgets.FontTextView
                    android:textSize="@dimen/_12sdp"
                    android:text="Video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</io.codetail.widget.RevealLinearLayout>